<mvc:View
	controllerName="sap.ui.demo.basicTemplate.controller.Home"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc">
	<Page id="page"
		  title="{i18n>title}">
		<content>
			<HBox class="hbox"
				  renderType="Bare"
				  alignItems="Stretch"
				  justifyContent="Stretch">
				<VBox alignItems="Center"
					  justifyContent="SpaceBetween"
					  renderType="Bare"
					  width="100%"
					  height="100%">
					<Title text="My Commissions"
						   level="H2"
						   titleStyle="H4"/>
					<ProgressIndicator percentValue="75"
									   displayValue="75%"
									   width="60%"
									   height="50px"
									   state="Success"/>
					<Text text="Status: On Track"/>
				</VBox>
				<core:HTML id="HTMLContent"
						   width="100%"
						   height="100%"/>
			</HBox>
			<HBox class="hbox"
				  renderType="Bare">
				<VBox alignItems="Center"
					  width="100%"
					  height="100%">
					<GenericTile header="Sales Quota"
								 level="H2"
								 titleStyle="H4">
						<TileContent unit="USD">
							<NumericContent value="5000"/>
						</TileContent>
					</GenericTile>
				</VBox>
				<VBox alignItems="Center"
					  width="100%"
					  height="100%">
					<GenericTile header="Quota Achieved"
								 level="H2"
								 titleStyle="H4">
						<TileContent unit="%">
							<NumericContent value="90"/>
						</TileContent>
					</GenericTile>
				</VBox>
				<VBox alignItems="Center"
					  width="100%"
					  height="100%">
					<GenericTile header="Sales Amount"
								 subheader="To reach next bracket"
								 level="H2"
								 titleStyle="H4">
						<TileContent unit="USD">
							<NumericContent value="300"/>
						</TileContent>
					</GenericTile>
				</VBox>
			</HBox>
		</content>
	</Page>
</mvc:View>